@model NProject.Web.ViewModels.Home.Settings
@{
    ViewBag.Title = "Settings";
}
@section Breadcrumbs
{
    @RazorHelpers.RenderBreadcrumbs(new Dictionary<string, string> { { Url.Action("Index", "Home"), "NProject" },
                                                                     {"", "Settings"} })
}
<h2>User settings</h2>
<table>
    <tbody>
        <tr>
            <td>
                UI language: <a class="btn btn-info btn-small" onclick="setUILanguage('en-us')"><i
                    class="icon-comment"></i>English</a> <a class="btn btn-info btn-small" onclick="setUILanguage('ru-ru')">
                        <i class="icon-comment"></i>Русский</a>
            </td>
        </tr>
    </tbody>
</table>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div style="padding-top: 5px; border-bottom: 1px solid #EEE;">
            <input type="submit" class="btn btn-small btn-primary" value="Save" />
            @*            <div class="pull-right">
                <a class="btn btn-danger btn-small" href="#delete_task_modal" data-toggle="modal"><i
                    class="icon-trash"></i>Delete </a>
            </div>*@
        </div>
            <div class="control-group">
                @Html.LabelFor(model => model.Locale)
                <div class="controls">
                    @Html.TextBoxFor(model => model.Locale)
                    @Html.ValidationMessageFor(model => model.Locale)
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.HoursOffset)
                <div class="controls">
                    @Html.TextBoxFor(model => model.HoursOffset)
                    @Html.ValidationMessageFor(model => model.HoursOffset)
                </div>
            </div>
    </fieldset>
}



<script language="javascript" type="text/javascript">
    function setUILanguage(locale) {
        var expires = new Date();
        expires.setYear(expires.getYear() + 1);
        var str = 'NProjectUILanguage=' + locale + ';path=/;expires=' + expires.toUTCString();
        alert(str);
        document.cookie = str;
    }
</script>
