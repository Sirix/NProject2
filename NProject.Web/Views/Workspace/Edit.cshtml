@model NProject.Web.ViewModels.Workspace.Form

@{
    ViewBag.FormLegend = Resources.Workspace_EditWS;
    ViewBag.Title = Model.Workspace.Name;
}

@section JSScript
{
<script language="javascript" type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-modal.js")"></script>
<script language="javascript" type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-transition.js")"></script>
}

@{Html.RenderPartial("_form", Model);}
<br />
<br />
<div id="ws_del_confirm" class="modal hide fade" style="display: none; ">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Deleting "@Model.Workspace.Name" workspace</h3>
    </div>
    <div class="modal-body">
        <p>You are about to delete this workspace.</p>
        <p>If you continue, this action <b>can not be undone</b>.</p>
        <p>All projects inside this workspace will be deleted.. </p>
    </div>
    <div class="modal-footer">
        @using (Html.BeginForm("Delete", "Workspace", FormMethod.Post))
        {
            @Html.Hidden("id", Model.Workspace.Id)
            @Html.AntiForgeryToken()
            <input type="submit" class="btn btn-danger large" value="Yes, DELETE it" />
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        }              
    </div>
</div>