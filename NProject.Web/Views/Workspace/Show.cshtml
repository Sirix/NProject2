@model NProject.Models.Domain.Workspace

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/Site.Layout.cshtml";
}
<div class="page-header">
<h1>@Model.Name</h1>
</div>
<div class="buttons-row">
  <div class="pull-right">
        <a class="btn btn-success btn-small" href="@Url.Action("Create", "Project", new {id=Model.Id})">
            <i class="icon-plus"></i> Create project
        </a>
  </div>
</div>

@Html.Partial("~/Views/Project/_ProjectList.cshtml", Model.Projects)
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
