@model NProject.Web.ViewModels.Project.Report
@{
    ViewBag.Title = "Report";
}
@section Breadcrumbs
{
    @RazorHelpers.RenderBreadcrumbs(new Dictionary<string, string> { { Url.Action("Show", "Project", new {id = Model.ProjectId}), Model.ProjectName },
                                                                     {"", "Report"} })
}
<div class="page-header">
<h1>Report <small>@RazorHelpers.ConvertUtcToUserDate(Model.BeginDate) &ndash; @RazorHelpers.ConvertUtcToUserDate(Model.EndDate)</small></h1>
</div>
<table  class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Responsible
        </th>
        <th>
            Cost
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Tasks)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Responsible.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Show", "Show","Task", new {id = item.Id}, new object())
        </td>
    </tr>
}
</table>